<launch>

  <arg name="rviz" default="false"/>
  <arg name="enable_joysticks" default="false"/>
  <arg name="planning_group" default="right_arm" />


  <!-- Enable baxter robot -->
  <node name="enable_baxter_robot" pkg="baxter_tools" type="enable_robot.py" output="screen" args="-e"/>

  <!-- Open head camera only -->
  <node name="setup_head_camera" pkg="baxter_teleop" type="setup_head_camera.py" output="screen" />

  <!-- PrioVR nodes -->
  <node name="sensor_orientations" pkg="priovr_interface" type="sensor_orientations.py" output="screen">
    <rosparam command="load" file="$(find priovr_interface)/config/priovr_common.yaml"/>
    <param name="enable_joysticks" value="$(arg enable_joysticks)" />
    <param name="frame_id" value="base" />
  </node>

  <node name="human_forward_kinematics" pkg="priovr_interface" type="human_forward_kinematics.py" output="screen">
    <rosparam command="load" file="$(find priovr_interface)/config/priovr_common.yaml"/>
    <param name="publish_rate" value="100" />
    <param name="frame_id" value="base" />
  </node>

  <!-- Joysticks -->
  <group if="$(arg enable_joysticks)">
    <node name="right_joystick" pkg="joy" type="joy_node" output="screen" ns="priovr">
      <param name="dev" value="/dev/input/js0" />
      <remap from="joy" to="joysticks" />
    </node>
  </group>

  <!-- the semantic description that corresponds to the URDF -->
  <param name="robot_description_semantic" textfile="$(find baxter_moveit_config)/config/baxter.srdf" />
  
  <!-- motion control using ik plugin defined in kinematics.yaml -->
  <node name="baxter_cart_controller" pkg="baxter_teleop" type="cartesian_controller" output="screen">
    <rosparam command="load" file="$(find baxter_moveit_config)/config/kinematics.yaml"/>
    <param name="publish_rate" value="100"/> <!-- Hz -->
    <param name="planning_group" value="$(arg planning_group)"/>
    <!-- Remapping -->
    <remap from="/baxter/ik_command" to="/priovr/r_wrist_pose" />
  </node>

  <!-- Show in Rviz -->
  <group if="$(arg rviz)">
    <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(find baxter_teleop)/config/cartesian_controller.rviz"/>
  </group>

</launch>
